<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealmExample.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Додати 1" Command="{Binding AddOne}"/>
            <Button Text="Додати 1000" Command="{Binding AddThousand}"/>
            <Button Text="Додати 1000000" Command="{Binding AddMillion}"/>
            <Button Text="Витягнути дані з бд" Command="{Binding DownloadBD}"/>
            <Button Text="Почистити бд" Command="{Binding ClearDB}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>